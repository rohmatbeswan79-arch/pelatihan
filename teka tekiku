    }
    html,body{height:100%;margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,'Helvetica Neue',Arial}
    body{
      background:var(--bg-dark);
      display:flex;align-items:center;justify-content:center;padding:20px;color:#013220;
    }
    .container{
      width:100%;max-width:680px;background:var(--skin-light);border-radius:12px;padding:22px;box-shadow:0 6px 18px var(--card-shadow);
    }
    h1{margin:0 0 8px;font-size:22px;color:#013220}
    .meta{font-size:14px;color:#044022;margin-bottom:12px}
    .puzzle-box{background:rgba(255,255,255,0.85);padding:18px;border-radius:10px;margin-bottom:14px}
    .hint{font-size:18px;margin:0 0 8px}
    .counter{font-size:13px;color:#055a2f;margin-bottom:8px}
    textarea{
      width:100%;min-height:90px;border-radius:8px;border:1px solid #cfded0;padding:10px;font-size:16px;resize:vertical;background:#ffffff;outline:none;box-sizing:border-box
    }
    .buttons{display:flex;gap:8px;flex-wrap:wrap;margin-top:12px}
    button{background:#ffffff;border:1px solid #cfded0;padding:8px 12px;border-radius:8px;cursor:pointer;font-weight:600}
    button:disabled{opacity:0.5;cursor:not-allowed}
    .feedback{margin-top:12px;font-weight:700}
    .correct{color:#0b6623}
