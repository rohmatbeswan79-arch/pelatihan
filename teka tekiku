<body>
  <div class="container" role="main">
    <h1>Teka-teki Hewan</h1>
    <div class="meta">Tebak nama hewan dari tiap teka-teki. Jawaban tidak sensitif huruf besar/kecil.</div>

    <div class="puzzle-box">
      <div class="counter" id="counter">Teka-teki 1 dari 5</div>
      <p class="hint" id="hint">Saya besar, punya belalai panjang, dan bertelinga lebar. Siapakah saya?</p>

      <label for="answer" class="small">Tulis jawaban Anda:</label>
      <textarea id="answer" placeholder="" aria-label="Jawaban" autocomplete="off"></textarea>

      <div class="buttons">
        <button id="prevBtn">Previous</button>
        <button id="nextBtn">Next</button>
        <button id="checkBtn">Hasil</button>
        <button id="resetBtn">Reset</button>
      </div>

      <div class="feedback" id="feedback" aria-live="polite"></div>
    </div>

    <div class="controls">
      <div class="small">Skin teka-teki: hijau muda Â· Latar: hijau tua</div>
      <div class="small">Terima kasih</div>
    </div>
  </div>

  <script>
    const puzzles = [
      {q: 'Saya besar, punya belalai panjang, dan bertelinga lebar. Siapakah saya?', a: 'gajah'},
      {q: 'Saya adalah karnivora besar bercorak belang-oranye-hitam dan hidup di hutan. Siapakah saya?', a: 'harimau'},
      {q: 'Saya biasa ditunggangi dan berlari cepat, berkuku keras. Siapakah saya?', a: 'kuda'},
      {q: 'Saya suka mengeong, berbulu, dan sering menjadi sahabat manusia. Siapakah saya?', a: 'kucing'},
      {q: 'Saya setia, sering menggonggong, dan disebut sahabat manusia. Siapakah saya?', a: 'anjing'},
    ];

    let idx = 0;
    const hintEl = document.getElementById('hint');
    const counterEl = document.getElementById('counter');
    const answerEl = document.getElementById('answer');
    const feedbackEl = document.getElementById('feedback');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const checkBtn = document.getElementById('checkBtn');
    const resetBtn = document.getElementById('resetBtn');

    function render(){
      const p = puzzles[idx];
      hintEl.textContent = p.q;
      counterEl.textContent = `Teka-teki ${idx+1} dari ${puzzles.length}`;
      // kosongkan textarea tapi jangan hapus jawaban sebelumnya? spec says provide textarea for answering; we'll clear when moving to next to ask fresh answer
      answerEl.value = '';
      feedbackEl.textContent = '';
      prevBtn.disabled = (idx === 0);
      nextBtn.disabled = (idx === puzzles.length -1);
      answerEl.focus();
    }

    function checkAnswer(){
      const user = answerEl.value.trim().toLowerCase();
      if(user === ''){ // treat empty as wrong
        feedbackEl.textContent = 'Maaf, jawaban Anda salah. Ulangi lagi.';
        feedbackEl.className = 'feedback wrong';
        return;
      }
      const correct = puzzles[idx].a.toLowerCase();
      if(user === correct){
        feedbackEl.textContent = 'Hebat. Jawaban Anda benar';
        feedbackEl.className = 'feedback correct';
      } else {
        feedbackEl.textContent = 'Maaf, jawaban Anda salah. Ulangi lagi.';
        feedbackEl.className = 'feedback wrong';
      }
    }

    prevBtn.addEventListener('click', ()=>{ if(idx>0){ idx--; render(); }});
    nextBtn.addEventListener('click', ()=>{ if(idx<puzzles.length-1){ idx++; render(); }});
    checkBtn.addEventListener('click', checkAnswer);
    resetBtn.addEventListener('click', ()=>{ answerEl.value=''; feedbackEl.textContent=''; feedbackEl.className='feedback'; answerEl.focus(); });

    // allow Enter+Ctrl to check quickly if user wants
    answerEl.addEventListener('keydown', (e)=>{
      if(e.key === 'Enter' && (e.ctrlKey || e.metaKey)){
        e.preventDefault(); checkAnswer();
      }
    });

    // initial render
    render();
  </script>
</body>
</html>
